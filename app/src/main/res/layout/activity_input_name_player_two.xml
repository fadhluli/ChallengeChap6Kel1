<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slider3_uilanding"
    android:isScrollContainer="false"
    tools:context="com.fadtech.challengechap6kel1.ui.menu.InputNamePlayerTwoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_14sdp">


        <ImageView
            android:id="@+id/iv_logo_inputfield_player_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/logo_header_allactivity_withlogo"/>

        <TextView
            android:id="@+id/tv_title_inputfield_player_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo_inputfield_player_two"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center"
            android:text="Player 2 Name"
            android:fontFamily="@font/electroharmonix"
            android:textSize="@dimen/_26ssp"
            android:textColor="@color/Font_Title_Color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_inputfield_player_two"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="Fill field your player two name"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/btn_img_inputfield_playertwo_getstated"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/btn_getstarted_slide3r_uilanding"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toBottomOf="@id/etPlayerName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView >
