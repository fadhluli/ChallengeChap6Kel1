<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dialog.SettingDialogFragment">

    <Button
        android:id="@+id/btn_profile"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="@string/text_btn_profile"
        android:fontFamily="@font/electroharmonix"
        android:textColor="@color/electroharmonix_font_color"
        android:textAlignment="center"
        android:background="@color/primary_color"
        android:layout_width="@dimen/_150sdp"
        android:textSize="@dimen/_16ssp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/text_btn_logout"
        android:textAlignment="center"
        android:layout_width="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_font"
        android:textSize="@dimen/_16ssp"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/secondary_color_variant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_profile"/>

    <Button
        android:id="@+id/btn_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/text_btn_exit"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/secondary_color_variant"
        android:layout_width="@dimen/_35sdp"
        android:background="@drawable/bg_round_close_dialog_button"
        android:layout_height="@dimen/_35sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>